@{
    ViewBag.Title = "Dashboard";
}

<h1 class="mt-4">Dashboard</h1>
<ol class="breadcrumb mb-4">
    <li class="breadcrumb-item active">Dashboard</li>
</ol>
@*Tarjetas encabezado*@
<div class="row">
    @*Cantidad de clientes*@
    <div class="col-xl-3 col-md-6">
        <div class="card shadow bg-success text-white mb-4">
            <div class="card-body">
                <div class="row">
                    <div class="col-sm-9">
                        <h6>Cantidad de clientes</h6>
                        <h6 id="cantidadClientes" style="font-size: calc(2em + 1vh);">0</h6>
                    </div>
                    <div class="col-sm-3">
                        <i class="fas fa-user fa-4x" style="opacity:0.4; transform:scale(1.6)"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
    @*Cantidad de ventas*@
    <div class="col-xl-3 col-md-6">
        <div class="card shadow bg-warning text-white mb-4">
            <div class="card-body">
                <div class="row">
                    <div class="col-sm-9">
                        <h6>Cantidad de ventas</h6>
                        <h6 id="cantidadVentas" style="font-size: calc(2em + 1vh);">0</h6>
                    </div>
                    <div class="col-sm-3">
                        <i class="fas fa-shopping-bag fa-4x" style="opacity:0.4; transform:scale(1.6)"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
    @*Cantidad de productos*@
    <div class="col-xl-3 col-md-6">
        <div class="card shadow bg-secondary text-white mb-4">
            <div class="card-body">
                <div class="row">
                    <div class="col-sm-9">
                        <h6>Cantidad de productos</h6>
                        <h6 id="cantidadProductos" style="font-size: calc(2em + 1vh);">0</h6>
                    </div>
                    <div class="col-sm-3">
                        <i class="fas fa-box fa-4x" style="opacity:0.4; transform:scale(1.6)"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="card mb-4">
    <div class="card-header">
        <i class="fas fa-tags me-1"></i>
        Historial de ventas
    </div>
    <div class="card-body">
        <form action="@Url.Action("ExportarVentas","Home")" method="post">
            <div class="row align-items-end">
                <div class="col-sm-2">
                    <div class="mb-2">
                        <label for="" class="form-label">Fecha de inicio</label>
                        <input type="text" id="txtfechainicio" name="fechainicio" class="form-control" />
                    </div>
                </div>
                <div class="col-sm-2">
                    <div class="mb-2">
                        <label for="" class="form-label">Fecha fin</label>
                        <input type="text" id="txtfechafin" name="fechafin" class="form-control" />
                    </div>
                </div>
                <div class="col-sm-2">
                    <div class="mb-2">
                        <label for="" class="form-label">Id Transacción</label>
                        <input type="text" id="txtidtransaccion" name="idtransaccion" class="form-control" placeholder="ej: 9998887776" />
                    </div>
                </div>
                <div class="col-sm-2">
                    <div class="d-grid mb-2">
                        <button class="btn btn-primary" id="btnBuscar" type="button"><i class="fas fa-search"></i> Buscar</button>
                    </div>
                </div>
                <div class="col-sm-2">
                    <div class="d-grid mb-2">
                        <button class="btn btn-success" type="submit"><i class="fas fa-file-excel"></i> Exportar</button>
                    </div>
                </div>
            </div>
        </form>
        <hr />
        <div class="row">
            <div class="col-sm-12">
                <table id="tablaVentas" class="display cell-border" style="width:100%">
                    <thead>
                        <tr>
                            <th>Fecha de venta</th>
                            <th>Cliente</th>
                            <th>Producto</th>
                            <th>Precio</th>
                            <th>Cantidad</th>
                            <th>Impuesto</th>
                            <th>Total</th>
                            <th>Id Transacción</th>
                        </tr>
                    </thead>
                    <tbody>

                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section scripts{
    <script>

        let dataTable;

        $(document).ready(function () {

            $("#txtfechainicio").datepicker({ dateFormat: 'dd/mm/yy' }).datepicker('setDate', new Date());
            $("#txtfechafin").datepicker({ dateFormat: 'dd/mm/yy' }).datepicker('setDate', new Date());

            jQuery.ajax({
                url: '@Url.Action("VistaDashboard", "Home")',
                type: "GET",
                dataType: "json",
                contentType: "application/json; charset=utf-8",
                success: function (data) {
                    let objeto = data.resultado;
                    $("#cantidadClientes").text(objeto.TotalClientes)
                    $("#cantidadVentas").text(objeto.TotalVentas)
                    $("#cantidadProductos").text(objeto.TotalProductos)
                }
            });

            //Llenamos la tabla de Resumen de Ventas
            let url = '@Url.Action("ListaReporte", "Home")' +
                "?fechaInicio=" + $("#txtfechainicio").val() +
                "&fechaFin=" + $("#txtfechafin").val() +
                "&idTransaccion=" + $("#txtidtransaccion").val()

            dataTable = $("#tablaVentas").DataTable({
                responsive: true,
                ordering: false,
                autoWidth: true,
                "ajax": {
                    url: url,
                    type: "GET",
                    dataType: "json",
                },
                "columns": [
                    { "data": "fechaVenta" },
                    { "data": "cliente" },
                    { "data": "producto" },
                    { "data": "precio" },
                    { "data": "cantidad" },
                    { "data": "impuesto" },
                    { "data": "total" },
                    { "data": "idTransaccion" }
                ],
                "language": {
                    "url": "https://cdn.datatables.net/plug-ins/1.11.3/i18n/es_es.json"
                }
            });
        });

        //Botón Buscar ventas según filtro
        $("#btnBuscar").on("click", function () {
            let _urlBusqueda = '@Url.Action("ListaReporte", "Home")' +
                "?fechaInicio=" + $("#txtfechainicio").val() +
                "&fechaFin=" + $("#txtfechafin").val() +
                "&idTransaccion=" + $("#txtidtransaccion").val()

            dataTable.ajax.url(_urlBusqueda).load();
        })

    </script>    
}